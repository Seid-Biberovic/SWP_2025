datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client"
    output   = "client"
    runtime  = "deno"
}

model Song {
    id      String @id @default(cuid())
    name    String
    albumId String
    album   Album  @relation(fields: [albumId], references: [id])
    genreId String
    genre   Genre  @relation(fields: [genreId], references: [id])
    dauer   Int
}

model Artist {
    id      String  @id @default(cuid())
    name    String
    albums  Album[]
    sprache String
}

model Album {
    id       String @id @default(cuid())
    title    String
    artistId String
    artist   Artist @relation(fields: [artistId], references: [id])
    jahr     Int
    songs    Song[]
}

model Genre {
    id               String @id @default(cuid())
    name             String
    erscheinungsjahr Int
    songs            Song[]
}